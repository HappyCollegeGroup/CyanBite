<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddNewGroupInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/img_btn_pic"
            android:layout_width="178dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="新增照片"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="選擇類型" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:id="@+id/checkbox_beverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="飲料"
                    android:layout_marginEnd="16dp"/>

                <CheckBox
                    android:id="@+id/checkbox_bento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="便當" />
            </LinearLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:text="團購名稱" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView22"
                style="@style/TextTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="團購介紹" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="團購電話" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView21"
                style="@style/TextTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="縣市" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="地區" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView20"
                style="@style/TextTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="取餐地點" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="點餐時間" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_ordering_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|time" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="取餐時間" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_collection_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|time" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit_move_to_restaurant"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增餐廳"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:backgroundTint="@color/cyan"/>
</LinearLayout>
