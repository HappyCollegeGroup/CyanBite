            <TextView
                android:id="@+id/textView20"
                style="@style/TextTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="取餐地點" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="點餐時間" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_ordering_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|time" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextTitleStyle"
                android:layout_marginTop="24dp"
                android:text="取餐時間" />

            <com.google.android.material.textfield.TextInputLayout style="@style/OutlinedInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_group_collection_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|time" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
